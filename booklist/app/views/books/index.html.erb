<h2 style="color: #AB6BE0;">Books</h2>

<h5 style="color: red;"><%= flash[:notice] if flash[:notice] %></h5>

<%= form_tag(books_path, method: :get) do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search book" %>
	<%= submit_tag "Search" %>
<% end %>

<table>
	<tr>
		<th>Photo</th>
		<th>Title</th>
		<th>ISBN</th>
		<th>AVG rating</th>
		<th>More about the book</th>
	</tr>

	<%= render @books %>
</table>


<%= will_paginate @books %>
<h5><%= link_to "Create", new_book_path %></h5>